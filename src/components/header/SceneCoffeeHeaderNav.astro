---
    import '../../css/EstilosGenerales.css';
---

<style>
    

    #ClickerFontTitle{
        font-family: 'ClickerScript';
        font-size: 35px;
    }

    nav > a, ul > button{
        font-size: 14px;
        font-family: 'PlayFair';
        font-weight: normal;
        font-style: normal;
    }
    .space-x-4 > li {
        align-items: center;
    }
</style>


<div class="container mx-auto p-4 flex justify-between items-center align-middle">
    <h1 class="text-4xl font-bold" id="ClickerFontTitle">Bean Coffee</h1>
    <nav class="flex">
        <a href="#" class="text-lg transition-transform transform hover:scale-110  mx-7">Inicio</a>
        <a href="#" class="text-lg transition-transform transform hover:scale-110 mx-7">Menu</a>
        <a href="#" class="text-lg transition-transform transform hover:scale-110 mx-7">Nosotros</a>
        <a href="#" class="text-lg transition-transform transform hover:scale-110 mx-7">Contactanos</a>
    </nav>

    <ul class="flex space-x-6">
        <button  class="text-lg transition-transform transform hover:scale-110 mx-2">Ingresar</button>
        <button class="custom-button rounded-l-full rounded-r-full">Registrarse</button>
    </ul>
</div>